/* pages/index/seat-selection.wxss */

page {
  background-color: white;
  width: 100%;
  height: 100%;
  font-size: 32rpx;
}

/* 时间选择器 */

picker {
  /* border: 1px solid red; */
  margin-left: 10rpx;
  margin-right: 10rpx;

}

/* 时间选择器 */

.head_container {
  width: 100%;
  height: 20%;
  position: fixed;
  top: 0;
  z-index: 1;
  background-color: #f2f2f2;
  /* border-bottom: 1rpx solid red; */
}

.head_container {
  display: flex;
  flex-flow: column;
  align-items: center;
}

.select_item_container {
  width: 94%;
  /* height: 60rpx; */
  height: 33.33%;
  padding-left: 4%;
  display: flex;
  flex-flow: row;
  align-items: center;
  border-bottom: 1rpx solid gray;
  border-right: none;
}

#last_title {
  border: none;
}

.select_item_title {
  /* border: 1px solid red; */
  width: 30%;
}

.select_item_body {
  width: 64%;
  display: flex;
  justify-content: center;
  /* border: 1px solid red; */
}

.last_select_item_body {
  width: 64%;
  color: blue;
  /* font-size: 32rpx; */
}

.last_arrows {
  width: 20rpx;
  height: 20rpx;
  /* border: 1px solid black; */
}

.body_container {
  position: absolute;
  top: 20%;
  /* border: 1px solid red; */
}

#seat_select_container {
  /* border: 1px solid black; */
}

.page__title {
  margin: 20px;
}

.weui-grids {
  background-color: white;
  color: white;
  padding: 4%;
  padding-left: 4%;
  padding-right: 0%;
}

.weui-grid {
  /*控制容器外部边框*/
  width: 120rpx;
  height: 120rpx;
  margin-right: 3%;
  margin-bottom: 3%;
}

.last-views {
  margin-right: 0rpx;
}

.weui-grid {
  /*控制容器自身样式*/
  padding-top: 20rpx;
  border-radius: 20rpx;
  background-color: #19be6b;
}

.weui-grid image {
  width: 42rpx;
  height: 42rpx;
}

.weui-grid view {
  color: white;
  font-weight: bold;
}

.free {
  background-color: #19be6b;
}

.booked {
  background-color: #ed3f14;
}

.deprecated {
  background-color: #eaeaea;
  /* border: 1px solid blue; */
}

.weui-grid_active {
  opacity: 0.9;
}
