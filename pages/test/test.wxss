page {
  background-color: white;
  width: 100%;
  height: 100%;
}

.modal-container {
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.1);
  display: flex;
  justify-content: center;
  align-items: center;
  /* padding-top: 30%; */
  text-align: center;
  position: fixed;
}

.modal-body {
  width: 86%;
  /* height: 300rpx; */
  background-color: white;
  border-radius: 10rpx;
  /* border: 1px solid red; */
}

.nodal-title {
  font-size: 32rpx;
  font-weight: bold;
  height: 120rpx;
  padding-top: 40rpx;
  /* border: 1px solid red; */
}

.nodal-content {
  height: 60rpx;
  line-height: 60rpx;
  /* border: 1px solid red; */
}

.modal-btns {
  margin-top: 30rpx;
  border-top: 1rpx solid #f2f2f2;
  /* border: 1px solid red; */
}

.modal-cancle-btn {
  color: #19be6b;
  border-right: 1rpx solid #f2f2f2;
  /* border: 1px solid red; */
}

.modal-confirm-btn {
  color: #ed3f14;
  /* border: 1px solid red; */
}

.modal-cancle-btn, .modal-confirm-btn {
  display: inline-block;
  width: 50%;
  height: 80rpx;
  line-height: 80rpx;
}


