/* pages/history/history.wxss */

page {
  height: 100%;
}

.body {
  display: flex;
  background-color: #f8f8f8;
  
  height: 100%;
  width: 100%;
}

.top {
  display: flex;
  flex-flow: column;
  justify-content: center;
  position: fixed;
  top: 0px;
  background-color: #f2f2f2;
  color: black;
  border-bottom: 2rpx solid lightgray;
  height: 60rpx;
  z-index: 1;
  /* border: 1px solid red;  */
}

.top_container {
  display: flex;
  width: 100%;
  height: 60rpx;
  /* border: 1px solid red; */
}

.top-text {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 250rpx;
  font-size: 12pt;
  /* border: 1px solid red;  */
  border-right: 2rpx solid lightgray;
}

#scroll_body {
  background-color: #f8f8f8;
  height: 95%;
  position: fixed;
  top: 60rpx;
}

#scroll_container {
  width: 100%;
  /* border-top: 1px solid red; */
  border-bottom: 1rpx solid lightgray;
}

#scroll_container {
  display: flex;
  align-items: center;
  justify-content: left;
}

.scroll_item {
  font-size: 10pt;
  height: 110rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-flow: column;
  /* border: 1px solid red;   */
}

#item1, #top_item1 {
  width: 320rpx;
}

#item2, #top_item2 {
  width: 100rpx;
}

#item3, #top_item3 {
  width: 330rpx;
}